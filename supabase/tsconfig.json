{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "lib": ["es2023", "dom"], // ✅ valid libs
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "@supabase/functions-js"] // ✅ local packages, not URLs
  },
  "include": ["./functions/**/*"]
}
